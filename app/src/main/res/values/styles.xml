<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="field_style">
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:background">@drawable/field_shape</item>
        <item name="android:padding">@dimen/padding_16</item>
    </style>

    <style name="edit_text_style" parent="field_style">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColorHint">@color/hint_edit_text_color</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="button_style">
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:radius">@dimen/button_radius</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

</resources>